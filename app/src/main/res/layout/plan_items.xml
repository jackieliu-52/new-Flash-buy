<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingLeft="12dp"
    android:paddingRight="16dp"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <View
            android:id="@+id/v_color"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="@color/pink"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_toRightOf="@id/v_color"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/ci_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"

            />
        <com.jackie.flash_buy.ui.SmoothCheckBox
            android:id="@+id/scb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/ci_image"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_toRightOf="@id/scb"
            android:paddingTop="6dp"
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:text="商品名称"/>


        <TextView
            android:paddingLeft="5dp"
            android:layout_toRightOf = "@id/tv_item_name"
            android:layout_alignBottom="@id/tv_item_name"
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="还有几天到期"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            />

    <LinearLayout android:gravity="right"
                  android:paddingTop="10dp"
                  android:layout_alignParentRight="true"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:clickable="true"
                  android:id="@+id/planTvMinus"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:background="@mipmap/button_minus"
                  android:layout_width="20dp"
                  android:layout_height="20dp" />
        <TextView android:text="0"
                  android:id="@+id/planCount"
                  android:minWidth="20dp"
                  android:layout_gravity="center_vertical"
                  android:textSize="16sp"
                  android:gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
        <TextView android:clickable="true"
                  android:id="@+id/planTvAdd"
                  android:textStyle="bold"
                  android:background="@mipmap/button_add"
                  android:gravity="center"
                  android:layout_width="20dp"
                  android:layout_height="20dp" />
    </LinearLayout>
    </RelativeLayout>
