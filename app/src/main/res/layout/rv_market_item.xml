<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="88dp">
        <ImageView
            android:id="@+id/ivMarketLogo"
            android:src="@drawable/ic_market_logo"
            android:layout_width="88dp"
            android:layout_height="88dp"/>
        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/ivMarketLogo"
            android:layout_width="wrap_content"
            android:layout_height="88dp">
            <TextView
                android:textSize="20sp"
                android:text="Flashbuy超市"
                android:id="@+id/rvTvMarketName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:text="欢迎消费者前来选购"
                android:id="@+id/rvTvMarketDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="88dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:id="@+id/rvTvMarketDis"
                android:text="2333m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="88dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="活动一：233333"
            android:id="@+id/rvTvMarketa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="活动二：2333333"
            android:id="@+id/rvTvMarketa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
